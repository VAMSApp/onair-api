{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext"
    ],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
        "@types": ["types/*"],
        "@api": ["api/*"]
    },
    "outDir": "dist",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "declaration": true,
  },
  "include": [
    "src"
  ]
}
